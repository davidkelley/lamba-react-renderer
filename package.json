{
  "name": "lambda-react-renderer",
  "version": "0.1.0",
  "private": true,
  "main": "handler.js",
  "engines": {
    "node": ">=4.3"
  },
  "dependencies": {
    "aws-sdk": "^2.54.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "6.11.6",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "aws-sdk": "^2.6.7",
    "aws-sdk-mock": "~1.6.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.11.1",
    "eslint-plugin-jsx-a11y": "^2.0.1",
    "eslint-plugin-react": "^5.2.2",
    "faker": "~3.1.0",
    "handlebars": "^4.0.10",
    "handlebars-loader": "^1.6.0",
    "ignore-loader": "^0.1.2",
    "jest": "~18.1",
    "json-loader": "^0.5.4",
    "path-to-regexp": "^1.5.3",
    "serverless-jest-plugin": "^0.1.3",
    "sinon": "~1.17",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.2",
    "webpack": "^2.4.1"
  },
  "babel": {
    "presets": [
      [
        "react"
      ],
      [
        "env",
        {
          "targets": {
            "node": "6.1"
          }
        }
      ]
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "hbs"
    ],
    "transform": {
      "\\.js$": "babel-jest",
      "\\.hbs$": "<rootDir>/__tests__/__utils__/templateTransformer.js"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/__utils__/setup.js"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb"
  },
  "scripts": {
    "build:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:client": "webpack --config webpack.client.config.js --progress --colors",
    "lint": "eslint events src pages test handler.js webpack.config.js",
    "test": "NODE_ENV=test jest __tests__/.+/*.test.js --coverage --notify",
    "test:watch": "npm run test -- --reporter min --watch"
  }
}
